<style>
/* Hero Container */
.hero-container {
    min-height: calc(100vh - 60px);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, var(--dark-bg) 0%, var(--darker-bg) 100%);
    padding: 2rem;
}

/* Hero Content */
.hero-content {
    max-width: 1200px;
    text-align: center;
    position: relative;
    z-index: 10;
}

/* Hero Logo */
.hero-logo {
    margin-bottom: 3rem;
}

.hero-title {
    font-size: clamp(4rem, 8vw, 8rem);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    text-shadow: 
        0 0 20px rgba(255, 215, 0, 0.5),
        3px 3px 6px rgba(0, 0, 0, 0.8);
    animation: glow 2s ease-in-out infinite alternate;
}

.title-main {
    color: var(--primary-gold);
}

.title-accent {
    color: var(--red-accent);
}

.hero-subtitle {
    font-size: clamp(1.4rem, 2.5vw, 2.2rem);
    color: var(--light-text);
    font-weight: bold;
    letter-spacing: 0.15em;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
}

.trophy {
    color: var(--primary-gold);
    font-size: 1.5em;
    margin: 0 1rem;
    animation: bounce 2s infinite;
}

/* Hero Description */
.hero-description {
    margin: 3rem 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.hero-description p {
    font-size: clamp(1.6rem, 2vw, 2rem);
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
}

/* Feature Cards */
.hero-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin: 4rem 0;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
}

.feature-card {
    background: rgba(20, 20, 20, 0.8);
    border: 2px solid var(--border-gold);
    border-radius: 15px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.feature-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-gold);
    box-shadow: 0 10px 30px rgba(255, 215, 0, 0.3);
}

.feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    display: block;
}

.feature-card h3 {
    color: var(--primary-gold);
    font-size: 1.8rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
}

.feature-card p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.4rem;
    line-height: 1.5;
}

/* CTA Section */
.hero-cta {
    margin-top: 4rem;
}

.cta-button {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    background: linear-gradient(45deg, var(--red-accent) 0%, var(--primary-gold) 100%);
    color: var(--darker-bg);
    font-size: 2rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 2rem 4rem;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 
        0 8px 25px rgba(255, 215, 0, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
    position: relative;
    overflow: hidden;
}

.cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 
        0 12px 35px rgba(255, 215, 0, 0.6),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
    text-decoration: none;
    color: var(--darker-bg);
}

.cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s;
}

.cta-button:hover::before {
    left: 100%;
}

.button-icon {
    font-size: 2.5rem;
    animation: wrestle 1s ease-in-out infinite alternate;
}

.cta-subtext {
    margin-top: 1.5rem;
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.4rem;
    font-style: italic;
}

/* Background Effects */
.hero-bg-effects {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
}

.ring-ropes {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
        repeating-linear-gradient(0deg, transparent, transparent 150px, rgba(255, 215, 0, 0.05) 150px, rgba(255, 215, 0, 0.05) 152px),
        repeating-linear-gradient(90deg, transparent, transparent 150px, rgba(255, 215, 0, 0.03) 150px, rgba(255, 215, 0, 0.03) 152px);
}

.spotlight-effect {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 215, 0, 0.08) 0%, transparent 70%);
    animation: spotlight-move 15s ease-in-out infinite alternate;
}

/* Animations */
@keyframes glow {
    0% { text-shadow: 0 0 20px rgba(255, 215, 0, 0.5), 3px 3px 6px rgba(0, 0, 0, 0.8); }
    100% { text-shadow: 0 0 30px rgba(255, 215, 0, 0.8), 3px 3px 6px rgba(0, 0, 0, 0.8); }
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-10px); }
    60% { transform: translateY(-5px); }
}

@keyframes wrestle {
    0% { transform: rotate(-5deg); }
    100% { transform: rotate(5deg); }
}

@keyframes spotlight-move {
    0% { transform: translate(-30%, -30%); }
    100% { transform: translate(30%, 30%); }
}

/* Mobile Responsive */
@media (max-width: 768px) {
    .hero-container {
        min-height: calc(100vh - 50px);
        padding: 1rem;
    }
    
    .hero-features {
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin: 3rem 0;
    }
    
    .feature-card {
        padding: 1.5rem;
    }
    
    .cta-button {
        font-size: 1.6rem;
        padding: 1.5rem 3rem;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .button-text {
        font-size: 1.4rem;
    }
    
    .button-icon {
        font-size: 2rem;
    }
}

@media (max-width: 480px) {
    .hero-subtitle {
        font-size: 1.2rem;
    }
    
    .trophy {
        display: none;
    }
    
    .hero-description p {
        font-size: 1.4rem;
    }
    
    .cta-button {
        width: 100%;
        max-width: 300px;
    }
}
</style>

